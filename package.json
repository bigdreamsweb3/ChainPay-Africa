{
    "name": "chainpay-africa",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "initialize-project": "npm init -y",
        "install-hardhat": "npm install --save-dev hardhat",
        "install-hardhat-toolbox": "npm install --save-dev @nomicfoundation/hardhat-toolbox",
        "install-openzeppelin": "npm install @openzeppelin/contracts",
        "install-ethers": "npm install ethers",
        "install-dotenv": "npm install dotenv",
        "test-rpc": "curl -X POST https://rpc.testnet.ms -H \"Content-Type: application/json\" --data \"{\\\"jsonrpc\\\":\\\"2.0\\\",\\\"method\\\":\\\"eth_blockNumber\\\",\\\"params\\\":[],\\\"id\\\":1}\"",
        "git-commit-push": "git diff-index --quiet HEAD || (git add . && git commit -m \"Something just got updated!\" --allow-empty && git push origin main)",
        "git-commit-push-force": "git add . && git commit -m \"Something just got updated!\" --no-verify --allow-empty && git push origin main --force",
        "compile-evm-contracts": "npx hardhat compile",
        "deploy-evm-contracts": "npx hardhat run evm-contracts/scripts/deploy.js --network crossfiTestnet",
        "flatten-evm-contract": "npx hardhat flatten ./evm-contracts/contracts/chainpay_airtime.sol > ./evm-contracts/contracts/ContractFlattened.sol"
    },
    "dependencies": {
        "@ethersproject/providers": "^5.7.2",
        "@hookform/resolvers": "^4.1.0",
        "@openzeppelin/contracts": "^5.2.0",
